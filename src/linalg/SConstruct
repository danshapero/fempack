env = Environment(
    tools=['default','gfortran'],
    F90='gfortran',
    LINK='gfortran',
    F90PATH=['.'])

linalg_sources = Split("""sparse_matrix_mod.f90 
                            csr_matrix_mod.f90
                            iterative_solver_mod.f90
                            cg_solver_mod.f90
                            nullpc_mod.f90
                            jacobi_mod.f90""")

linalglib = env.Library('linalg',linalg_sources)

