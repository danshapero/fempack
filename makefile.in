FC = gfortran
CC = gcc
CXX = g++
AR = ar
RANLIB = ranlib

FCFLAGS = -J$(INCLUDE)
CCFLAGS = -I$(INCLUDE)
CXXFLAGS = -I$(INCLUDE)
OPTFLAGS = -O2 -fopenmp
DEBUGFLAGS = -g -fbounds-check -Wall

#.PHONY: clean veryclean

%.o: %.f90
	$(FC) -o $@ -c $< $(FCFLAGS)

%.o: %.c
	$(CC) -o $@ -c $< $(CCFLAGS)

%.o: %.cpp
	$(CXX) -o $@ -c $< $(CXXFLAGS)

